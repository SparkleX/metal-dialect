{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
		"esModuleInterop":true,
		"module": "ES2022",
		"target": "ES2022",
		"outDir": "dist",
		"noImplicitAny": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
    },
    "include": [
		  "src/**/*", "jest.config.js"
    ],
    "exclude": [
        "node_modules",
		"src/**/*.spec.ts"
    ]
}